@model Numiteq.Areas.Admin.ViewModels.Settings.WwdBannerViewModel
@{
    ViewData["Title"] = "What We Do banner settings";
}

<div class="row">
    <div class="col-md-8">
        <form method="post">

            <div class="form-group">
                <label asp-for="Header"></label>
                <textarea asp-for="Header" class="form-control"></textarea>
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonText"></label>
                <input asp-for="ButtonText" class="form-control" />
                <span asp-validation-for="ButtonText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonLink"></label>
                <input asp-for="ButtonLink" class="form-control" />
                <span asp-validation-for="ButtonLink" class="text-danger"></span>
            </div>

            <hr />

            <div class="form-button">
                <button type="submit" class="btn btn-dark">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

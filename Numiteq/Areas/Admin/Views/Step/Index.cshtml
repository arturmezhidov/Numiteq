@model Numiteq.Areas.Admin.ViewModels.Steps.IndexViewModel
@{
    ViewData["Title"] = "Steps";
    int i = 0;
}

<div class="toolbar">
    <a asp-action="Add" class="btn btn--full">Add</a>
    <a asp-action="Settings" class="btn btn--full">Settings</a>
    <a asp-area="Admin" asp-controller="Home" class="btn btn--full">Back</a>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var step in Model.Steps)
        {
            i++;

            <tr>
                <th scope="row">@i</th>
                <td>@step.Title</td>
                <td>@Html.Raw(step.Description)</td>
                <td class="action">
                    <a asp-action="Edit" asp-route-id="@step.Id" class="btn">Edit</a>
                    <a asp-action="Delete" asp-route-id="@step.Id" class="btn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@using Numiteq.Areas.Admin.ViewModels.MessageEmails

@model IndexViewModel

@{
    ViewData["Title"] = "Emails";
    int i = 0;
}

<h4>Add new email</h4>

@Html.Partial("_AddMessageEmail", new AddMessageEmailViewModel())

<hr />

<div class="toolbar">
    <a asp-area="Admin" asp-controller="Home">Back</a>
</div>
 
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var email in Model.Emails)
        {
            i++;

            <tr>
                <th scope="row">@i</th>
                <td>@email.Email</td>
                <td class="action">
                    <a asp-action="Delete" asp-route-id="@email.Id" class="btn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
